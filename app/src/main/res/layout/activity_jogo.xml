<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_jogo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.jogovelhaapp.jogoActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:tag="quadrado1"
            android:id="@+id/quadrado1"
            android:onClick="clickQuadrado"
            android:enabled="false"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:tag="quadrado2"
            android:onClick="clickQuadrado"
            android:enabled="false"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:tag="quadrado3"
            android:onClick="clickQuadrado"
            android:enabled="false"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:tag="quadrado4"
            android:onClick="clickQuadrado"
            android:enabled="false"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:tag="quadrado5"
            android:onClick="clickQuadrado"
            android:enabled="false"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:tag="quadrado6"
            android:onClick="clickQuadrado"
            android:enabled="false"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:tag="quadrado7"
            android:onClick="clickQuadrado"
            android:enabled="false"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:tag="quadrado8"
            android:onClick="clickQuadrado"
            android:enabled="false"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:tag="quadrado9"
            android:onClick="clickQuadrado"
            android:enabled="false"/>

    </LinearLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:text="Play"
        android:onClick="newGame"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rdX"
            android:text="X"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rdO"
            android:text="O"/>

    </RadioGroup>




</LinearLayout>
